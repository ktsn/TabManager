{
  "manifest_version": 2,

  "name": "Hawkeye",
  "description": "The comfortable tab management tool",
  "version": "0.1.0",
  "author": "katashin",

  "background": {
    "scripts": [
      "js/util.js",
      "js/tab_manager.js",
      "js/background.js"
    ]
  },

  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "images/icon.png"
  }
}
