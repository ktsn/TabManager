  "compilerOptions": {
    "target": "es5",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false
  },
  "compileOnSave": false,
  "filesGlob": [
    "./**/*.ts",
    "!./node_modules/**/*.ts"
