    "./src/ts/index.ts",
    "./src/ts/snapshot.ts",
    "./src/ts/tab_manager.ts",
    "./src/ts/tab.ts",
    "./src/ts/util.ts",
    "./src/ts/window.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
